            <Button Content="Войти" Click="Button_Click" Foreground="Azure" Background="#232323" HorizontalAlignment="Left" Margin="333,248,0,0" VerticalAlignment="Top" Width="120" Height="42"/>
            <Button Content="x" HorizontalAlignment="Left" Click="Button_Click_1" Background="Red"  Margin="765,0,0,0" VerticalAlignment="Top" Width="35" Height="27"/>

        </Grid>
    </Border>
